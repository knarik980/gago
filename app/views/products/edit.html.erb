<h1>Edit Product</h1>

<%= form_for @product do |form| %>
<br>
<%= form.label :name %><br>
<%= form.text_field :name %>
<br>
<%= form.label :description %><br>
<%= form.text_field :description %>
<br>
<%= form.label :photo %><br>
<%= form.text_field :photo %>
<br>
<%= form.label :price %><br>
<%= form.text_field :price %><br>
<br>
<%= form.submit "Save Changes" %>
	<% end %>